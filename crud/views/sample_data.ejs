
<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>IMS</title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
            <% if(action == 'add') { %>

            <div class="card">
                <div class="card-header">Database</div>
                <div class="card-body">
                    <form method="POST" action="/sample_data/add_sample_data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Name</label>
                                    <input type="text" name="name" id="first_name" class="form-control"  />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Type</label>
                                    <input type="text" name="type" id="last_name" class="form-control"  />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Description</label>
                                    <input type="text" name="description" id="last_name" class="form-control"  />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Unit</label>
                                    <input type="text" name="unit" id="age" class="form-control"  />
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Quantity</label>
                                    <input type="text" name="quantity" id="age" class="form-control"  />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Category</label>
                                    <input type="text" name="category" id="age" class="form-control"  />
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Location</label>
                                    <input type="text" name="location" id="age" class="form-control"  />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Invoice</label>
                                    <input type="text" name="invoice" id="age" class="form-control"  />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Consideration</label>
                                    <input type="text" name="consideration" id="age" class="form-control"  />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Status</label>
                                    <input type="text" name="status" id="age" class="form-control"  />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Code</label>
                                    <input type="text" name="code" id="age" class="form-control"  />
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- ---------------------------------------------------------------------------- -->
            
            <% } else if(action == 'customer') { %>
                <div class="card">
                    <div class="card-header">Add Customer Info</div>
                    <div class="card-body">
                        <form method="POST" action="/sample_data/customer_sample_data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Name</label>
                                        <input type="text" name="name" id="first_name" class="form-control"  />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>FatherName</label>
                                        <input type="text" name="fathername" id="last_name" class="form-control"  />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Position</label>
                                        <input type="text" name="position" id="last_name" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Departement</label>
                                        <input type="text" name="departement" id="age" class="form-control"  />
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Phone</label>
                                        <input type="text" name="phone" id="age" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Item Code</label>
                                        <input type="text" name="item_code" id="age" class="form-control" />
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Required Quantity</label>
                                        <input type="text" name="quantity" id="age" class="form-control"  />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Item Name</label>
                                        <input type="text" name="item_name" id="age" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Consideration</label>
                                        <input type="text" name="consider" id="age" class="form-control"  />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Status</label>
                                        <input type="text" name="status" id="age" class="form-control"  />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Date</label>
                                        <input type="date" name="date" id="age" class="form-control"  />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                            </div>
                        </form>
                    </div>
                </div>

            <!-- ---------------------------------------------------------------------------- -->


            <% } else if(action == 'edit') { %>
            <div class="card">
                <div class="card-header">Edit Form Data</div>
                <div class="card-body">
                    <form method="POST" action="/sample_data/edit/<%= sampleData.id %>">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Name</label>
                                    <input type="text" name="name" id="first_name" class="form-control" value="<%= sampleData.name %>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Type</label>
                                    <input type="text" name="type" id="last_name" class="form-control" value="<%= sampleData.type %>" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Description</label>
                                    <input type="text" name="description" id="last_name" class="form-control" value="<%= sampleData.description%>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Unit</label>
                                    <input type="text" name="unit" id="age" class="form-control" value="<%= sampleData.unit %>" />
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Quantity</label>
                                    <input type="text" name="quantity" id="age" class="form-control" value="<%= sampleData.quantity %>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Category</label>
                                    <input type="text" name="category" id="age" class="form-control" value="<%= sampleData.category %>" />
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Location</label>
                                    <input type="text" name="location" id="age" class="form-control" value="<%= sampleData.location %>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Invoice</label>
                                    <input type="text" name="invoice" id="age" class="form-control" value="<%= sampleData.invoice %>" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Consideration</label>
                                    <input type="text" name="consideration" id="age" class="form-control" value="<%= sampleData.consideration %>" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Status</label>
                                    <input type="text" name="status" id="age" class="form-control" value="<%= sampleData.status %>" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Code</label>
                                    <input type="text" name="code" id="age" class="form-control" value="<%= sampleData.code %>" />
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                        </div>
                    </form>
                </div>
            </div>

            <% } else { %>
                <% if(message.length > 0) { %>
                <div class="alert alert-success">
                    <%= message %>
                </div>
                <% } %>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Database</div>
                        <div class="col">
                            <a href="/sample_data/customer" class="btn btn-warning btn-sm float-end" style="margin-left: 1vh;">Customer</a>
                            <a href="/sample_data/add" class="btn btn-success btn-sm float-end">Add</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Unit</th>
                                <th>Quantity</th>
                                <th>Category</th>
                                <th>Location</th>
                                <th>Invoice</th>
                                <th>Consideration</th>
                                <th>Upload</th>
                                <th>Code</th>
                                <th>Action</th>
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.name %></td>
                                <td><%= data.type %></td>
                                <td><%= data.description %></td>
                                <td><%= data.unit %></td>
                                <td><%= data.quantity %></td>
                                <td><%= data.category %></td>
                                <td><%= data.location %></td>
                                <td><%= data.invoice %></td>
                                <td><%= data.consideration %></td>
                                <td><%= data.status %></td>
                                <td><%= data.code%></td>
                                <td>
                                    <a href="/sample_data/edit/<%= data.id %>" class="btn btn-primary btn-sm " style="margin-bottom: 1px;">Edit</a>
                                    <a href="/sample_data/delete/<%= data.id %>" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>